{
  "compilerOptions": {
    "lib": ["ES2016", "DOM"],
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "paths": {
      "utils/*": ["utils/*"],
      "services/*": ["services/*"],
      "constants/*": ["constants/*"],
      "consoles/*": ["consoles/*"],
      "middlewares/*": ["middlewares/*"],
      "logging/*": ["logging/*"],
      "helpers/*": ["helpers/*"],
      "components/*": ["components/*"],
      "databases/*": ["databases/*"],
      "repositories/*": ["repositories/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src"],
  "exclude": ["node_modules", "coverage", "dist", "test", "**/*test.ts"]
}
